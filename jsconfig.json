{
    "exclude": ["node_modules"],
    "include": ["src/*"],
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@/component/*" : ["component/*"],
            "@/layout/*" : ["layout/*"],
            "@/styles/*" : ["styles/*"],
            "@/assets/*" : ["assets/*"],
            "@/api/*" : ["api/*"],
            "@/provider/*" : ["provider/*"],
            "@/page/*" : ["pages/*"],
            "@/gql/*" : ["gql/*"]
        }
    }
}